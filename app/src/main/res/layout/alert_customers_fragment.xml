<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/justview2"
        android:background="#111"
        android:layout_marginTop="10dp">
    </View>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alert_customers_constraint"
        app:layout_constraintTop_toBottomOf="@+id/justview2"
        android:paddingVertical="25dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="안드로이드 강의"
            android:textSize="20sp"
            android:textColor="#111"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#19FF0000"
            android:layout_marginLeft="10dp"
            android:id="@+id/alert_customers_wantedItem"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아쉽게 이 상품은 다른사람이
빌려가게 되었습니다"
                android:textColor="#111"
                app:layout_constraintLeft_toRightOf="@+id/alert_customers_wantedItem"
                app:layout_constraintTop_toTopOf="@+id/alert_customers_wantedItem"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/justtxt4"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/11/01"
            app:layout_constraintRight_toRightOf="@+id/justtxt4"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/alert_customers_constraint"
        android:background="#111">

    </View>

</android.support.constraint.ConstraintLayout>