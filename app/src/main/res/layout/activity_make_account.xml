<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeAccount">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/xmlid1"
        app:layout_constraintLeft_toLeftOf="@+id/MakeAccount_email_txt"
        android:text="이메일 입력"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:textColor="#111"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/MakeAccount_email_txt"
        app:layout_constraintLeft_toLeftOf="@+id/xmlid1"
        android:id="@+id/xmlid2"
    android:text="비밀번호 입력"
    android:layout_marginTop="30dp"
        android:textColor="#111"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/MakeAccount_password_txt"
        app:layout_constraintLeft_toLeftOf="@+id/xmlid1"
        android:text="비밀번호 재입력"
        android:id="@+id/xmlid3"
        android:layout_marginTop="30dp"
        android:textColor="#111"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_email_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xmlid1"
        android:hint="이메일을 입력해주세요"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_password_txt"
        app:layout_constraintLeft_toLeftOf="@+id/MakeAccount_email_txt"
        app:layout_constraintTop_toBottomOf="@+id/xmlid2"
        android:hint="비밀번호를 입력해주세요"
        android:password="true"
        />
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_repassword_txt"
        app:layout_constraintLeft_toLeftOf="@+id/MakeAccount_email_txt"
        app:layout_constraintTop_toBottomOf="@+id/xmlid3"
        android:hint="비밀번호를 재입력해주세요"
        android:password="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_Grade_txt"
        android:hint="학년"
        app:layout_constraintTop_toTopOf="@+id/MakeAccount_Name_txt"
        app:layout_constraintLeft_toLeftOf="@+id/MakeAccount_repassword_txt"
        android:paddingHorizontal="15dp"
        android:maxLength="1"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_Class_txt"
        app:layout_constraintTop_toTopOf="@+id/MakeAccount_Name_txt"
        app:layout_constraintRight_toLeftOf="@+id/MakeAccount_Number_txt"
        app:layout_constraintLeft_toRightOf="@+id/MakeAccount_Grade_txt"
        android:paddingHorizontal="15dp"
        android:hint=" 반 "
        android:maxLength="2"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_Number_txt"
        android:hint="번호"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MakeAccount_Name_txt"
        android:paddingHorizontal="15dp"
        android:maxLength="2"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeAccount_Name_txt"
        app:layout_constraintRight_toRightOf="@+id/MakeAccount_repassword_txt"
        app:layout_constraintTop_toBottomOf="@+id/MakeAccount_repassword_txt"
        android:hint="이름"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:maxLength="5"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:background="#2979FF"
            android:textColor="#F1F1F1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MakeAccount_Number_txt"
            android:layout_marginTop="50dp"
            android:paddingHorizontal="35dp"
            android:id="@+id/MakeAccount_signupBtn"
            />

</android.support.constraint.ConstraintLayout>